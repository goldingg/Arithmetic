<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ArithmeticMobile.MainPage">

    <StackLayout>
        <Entry Keyboard="Numeric" Placeholder="First Numbers"/>
        <Picker>
            <Picker.Items>
                <x:String>+</x:String>
                <x:String>-</x:String>
                <x:String>*</x:String>
                <x:String>/</x:String>
            </Picker.Items>
        </Picker>
        <Entry Keyboard="Numeric" Placeholder="First Number"/>
        <Button Text="Calculate" Clicked="Button_Clicked" />
    </StackLayout>

</ContentPage>